._li {
  list-style: none;
}
.list-item {
  margin-bottom: 10px;
}
.list-item .item-inner {
  width: 95%;
  margin: 0 auto;
}
.list-item .item-inner .pro-info .info-img {
  display: inline-block;
  width: 80px;
  height: 80px;
  margin-right: 5px;
}
.list-item .item-inner .pro-info .info-img image {
  width: 100%;
  height: 100%;
}
.list-item .item-inner .pro-info .judgeImg {
  width: 70px;
  height: 70px;
}
.list-item .item-inner .pro-info .info-text {
  display: inline-block;
  vertical-align: top;
  font-size: 13px;
  width: calc(100% - 88px);
}
.list-item .item-inner .pro-info .info-text .text-title {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.list-item .item-inner .pro-info .info-text .text-option {
  margin: 3px 0;
}
.list-item .item-inner .pro-info .info-text .text-price {
  font-size: 15px;
  font-weight: bolder;
  color: red;
}
.list-item .item-inner .pro-info .info-text .text-count {
  border: 1px solid gray;
  border-radius: 5px;
  padding: 2px 5px;
  float: right;
}
.list-item .item-inner .item-status {
  width: 100%;
  height: 35px;
  line-height: 35px;
  padding-left: 10px;
  margin: 10px 0;
  background-color: whitesmoke;
  border-radius: 10px;
  font-size: 13px;
  font-weight: bolder;
}
.list-item .item-inner .item-operate {
  width: 100%;
  height: 40px;
}
.list-item .item-inner .item-operate .u-button {
  width: 60px;
  float: right;
}

