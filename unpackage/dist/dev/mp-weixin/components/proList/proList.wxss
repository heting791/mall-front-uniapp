.pro-list-content .list-inner ._ul {
  margin: 0;
  padding: 0;
}
.pro-list-content .list-inner ._ul ._li {
  list-style: none;
}
.pro-list-content .list-inner ._ul .pro-item {
  margin-bottom: 10px;
  background-color: white;
  border-radius: 10px;
}
.pro-list-content .list-inner ._ul .pro-item .item-inner {
  width: 95%;
  margin: 0 auto;
}
.pro-list-content .list-inner ._ul .pro-item .item-inner .item-check {
  display: inline-block;
  width: 20px;
}
.pro-list-content .list-inner ._ul .pro-item .item-inner .item-img {
  display: inline-block;
  vertical-align: middle;
  width: 70px;
  height: 70px;
  margin: 0 5px;
}
.pro-list-content .list-inner ._ul .pro-item .item-inner .item-img image {
  width: 100%;
  height: 100%;
}
.pro-list-content .list-inner ._ul .pro-item .item-inner .cartImg {
  width: 80px;
  height: 80px;
}
.pro-list-content .list-inner ._ul .pro-item .item-inner .item-text {
  display: inline-block;
  vertical-align: top;
  width: calc(100% - 80px);
}
.pro-list-content .list-inner ._ul .pro-item .item-inner .item-text .text-title {
  font-size: 13px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.pro-list-content .list-inner ._ul .pro-item .item-inner .item-text .text-oprice {
  margin: 1px 0;
}
.pro-list-content .list-inner ._ul .pro-item .item-inner .item-text .text-oprice .oprice {
  font-size: 12px;
  color: gray;
  text-decoration: line-through;
}
.pro-list-content .list-inner ._ul .pro-item .item-inner .item-text .text-option {
  margin: 5px 0 10px 0;
  font-size: 12.5px;
}
.pro-list-content .list-inner ._ul .pro-item .item-inner .item-text .text-option .u-icon {
  display: inline-block;
}
.pro-list-content .list-inner ._ul .pro-item .item-inner .item-text .text-bottom .bottom-price {
  display: inline-block;
  font-size: 15px;
  font-weight: bolder;
  color: red;
}
.pro-list-content .list-inner ._ul .pro-item .item-inner .item-text .text-bottom .text-star {
  float: right;
  margin-top: -13px;
}
.pro-list-content .list-inner ._ul .pro-item .item-inner .item-text .text-bottom .bottom-count {
  display: inline-block;
  vertical-align: top;
  float: right;
  margin-right: 3px;
}
.pro-list-content .list-inner ._ul .pro-item .item-inner .item-text .text-bottom .bottom-count ._span {
  display: inline-block;
  width: 30px;
  height: 22px;
  line-height: 22px;
  text-align: center;
  background-color: #EBECEE;
  font-weight: bolder;
}
.pro-list-content .list-inner ._ul .pro-item .item-inner .item-text .text-bottom .bottom-count ._span:nth-child(2) {
  width: 33px;
  margin: 0 3px;
  font-weight: normal;
}
.pro-list-content .list-inner ._ul .pro-item .item-inner .item-text .text-bottom .bottom-count ._span.disabled {
  background-color: #F7F8FA;
  color: lightgray;
}
.pro-list-content .list-inner ._ul .cartText {
  width: calc(100% - 110px) !important;
}
.pro-list-content .list-inner ._ul .cartItem {
  padding: 5px 0;
  margin-bottom: 15px;
}

