.popup .close {
  text-align: right;
  margin: 10px;
}
.popup .sku-content .content-top {
  width: 95%;
  margin: 0 auto;
}
.popup .sku-content .content-top .top-img,
.popup .sku-content .content-top .top-title {
  display: inline-block;
  vertical-align: top;
}
.popup .sku-content .content-top .top-img,
.popup .sku-content .content-top .top-img image {
  width: 100px;
  height: 100px;
}
.popup .sku-content .content-top .top-title {
  width: 65%;
  font-size: 13px;
  margin-left: 10px;
}
.popup .sku-content .content-top .top-title .che-price {
  font-size: 18px;
  font-weight: bolder;
  color: red;
  margin-top: 10px;
}
.popup .sku-content .content-main {
  margin: 10px;
}
.popup .sku-content .content-main .sku-box .sku-item {
  font-size: 15px;
  margin-bottom: 15px;
}
.popup .sku-content .content-main .sku-box .sku-item .sku-title {
  font-weight: bolder;
  margin: 10px 0;
}
.popup .sku-content .content-main .sku-box .sku-item .option-list {
  font-size: 13px;
}
.popup .sku-content .content-main .sku-box .sku-item .option-list ._li {
  list-style: none;
  display: inline-block;
  height: 20px;
  line-height: 20px;
  text-align: center;
  margin-right: 10px;
  margin-bottom: 10px;
  border: 1px solid lightgray;
  padding: 3px 5px;
}
.popup .sku-content .content-main .sku-box .sku-item .option-list ._li.cur {
  border-color: red;
  color: red;
}
.popup .sku-content .content-main .sku-box .sku-item:last-child .sku-title,
.popup .sku-content .content-main .sku-box .sku-item:last-child .count {
  display: inline-block;
  vertical-align: top;
}
.popup .sku-content .content-main .sku-box .sku-item:last-child .count {
  float: right;
}
.popup .sku-content .content-bottom {
  width: 98%;
  margin: 0 auto;
}
.popup .sku-content .content-bottom .button-item {
  display: inline-block;
  vertical-align: top;
  width: 49%;
}
.popup .sku-content .content-bottom .button-item:first-child {
  margin-right: 3px;
}

