.cart-content .cart-title {
  width: 100%;
  height: 35px;
  background-color: whitesmoke;
  line-height: 35px;
  font-size: 13px;
}
.cart-content .cart-title .cart-title-inner {
  width: 93%;
  margin: 0 auto;
}
.cart-content .cart-title .cart-title-inner .title-count {
  display: inline-block;
}
.cart-content .cart-title .cart-title-inner .title-edit-box {
  display: inline-block;
  vertical-align: top;
  float: right;
}
.cart-content .cart-title .cart-title-inner .title-edit-box .box-edit .u-icon {
  display: inline-block;
}
.cart-content .cart-title .cart-title-inner .title-edit-box .box-complate ._span {
  color: red;
}
.cart-content .cart-bottom {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: white;
}
.cart-content .cart-bottom .cart-bottom-inner {
  width: 99%;
  margin: 0 auto;
}
.cart-content .cart-bottom .cart-bottom-inner .bottom-all {
  display: inline-block;
  font-size: 14px;
  margin-right: 10px;
  margin-top: 10px;
}
.cart-content .cart-bottom .cart-bottom-inner .bottom-all .u-icon {
  display: inline-block;
  margin-right: 3px;
}
.cart-content .cart-bottom .cart-bottom-inner .bottom-all ._span {
  display: inline-block;
  vertical-align: top;
}
.cart-content .cart-bottom .cart-bottom-inner .bottom-total {
  font-size: 14px;
  display: inline-block;
  vertical-align: top;
  margin-top: 8px;
}
.cart-content .cart-bottom .cart-bottom-inner .bottom-total .total-price {
  font-size: 18px;
  color: red;
  font-weight: bolder;
}
.cart-content .cart-bottom .cart-bottom-inner .bottom-button {
  display: inline-block;
  vertical-align: middle;
  float: right;
}

