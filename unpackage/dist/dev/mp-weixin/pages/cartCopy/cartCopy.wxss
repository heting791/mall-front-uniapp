.cart-content {
  background-color: whitesmoke;
}
.cart-content .cart-title {
  width: 93%;
  height: 25px;
  line-height: 35px;
  margin: 0 auto;
  font-size: 13px;
}
.cart-content .cart-title .title-count {
  display: inline-block;
}
.cart-content .cart-title .title-edit-box {
  display: inline-block;
  vertical-align: top;
  float: right;
}
.cart-content .cart-title .title-edit-box .box-edit .u-icon {
  display: inline-block;
}
.cart-content .cart-title .title-edit-box .box-complate ._span {
  color: red;
}
.cart-content .cart-content-box .box-list {
  width: 98%;
  margin: 10px auto;
}
.cart-content .cart-content-box .box-list .list-item {
  background-color: white;
  margin-bottom: 15px;
  padding: 10px 0;
}
.cart-content .cart-content-box .box-list .list-item .item-check {
  display: inline-block;
  width: 20px;
}
.cart-content .cart-content-box .box-list .list-item .item-info {
  display: inline-block;
  vertical-align: middle;
  width: calc(100% - 20px);
}
.cart-content .cart-content-box .box-list .list-item .item-info .info-img {
  display: inline-block;
  width: 80px;
  height: 80px;
}
.cart-content .cart-content-box .box-list .list-item .item-info .info-img image {
  width: 100%;
  height: 100%;
}
.cart-content .cart-content-box .box-list .list-item .item-info .info-text {
  display: inline-block;
  vertical-align: top;
  width: calc(100% - 80px);
  font-size: 13px;
}
.cart-content .cart-content-box .box-list .list-item .item-info .info-text .text-title {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.cart-content .cart-content-box .box-list .list-item .item-info .info-text .text-option {
  margin: 5px 0;
}
.cart-content .cart-content-box .box-list .list-item .item-info .info-text .text-option .u-icon {
  display: inline-block;
}
.cart-content .cart-content-box .box-list .list-item .item-info .info-text .text-bottom .bottom-price {
  display: inline-block;
  font-size: 15px;
  font-weight: bolder;
  color: red;
}
.cart-content .cart-content-box .box-list .list-item .item-info .info-text .text-bottom .bottom-count {
  display: inline-block;
  vertical-align: top;
  float: right;
  margin-right: 3px;
}
.cart-content .cart-bottom {
  position: fixed;
  bottom: 50px;
  width: 100%;
  background-color: white;
}
.cart-content .cart-bottom .cart-bottom-inner {
  width: 99%;
  margin: 0 auto;
}
.cart-content .cart-bottom .cart-bottom-inner .bottom-all {
  display: inline-block;
  font-size: 14px;
  margin-right: 10px;
  margin-top: 10px;
}
.cart-content .cart-bottom .cart-bottom-inner .bottom-all .u-icon {
  display: inline-block;
  margin-right: 3px;
}
.cart-content .cart-bottom .cart-bottom-inner .bottom-all ._span {
  display: inline-block;
  vertical-align: top;
}
.cart-content .cart-bottom .cart-bottom-inner .bottom-total {
  font-size: 14px;
  display: inline-block;
  vertical-align: top;
  margin-top: 8px;
}
.cart-content .cart-bottom .cart-bottom-inner .bottom-total .total-price {
  font-size: 18px;
  color: red;
  font-weight: bolder;
}
.cart-content .cart-bottom .cart-bottom-inner .bottom-button {
  display: inline-block;
  vertical-align: middle;
  float: right;
}

