.cate-container .cate-container-box {
  margin-top: 15px;
}
.cate-container .cate-container-box .box-left {
  display: inline-block;
  width: 23%;
  background-color: whitesmoke;
  font-size: 13px;
}
.cate-container .cate-container-box .box-left view {
  height: 50px;
  line-height: 50px;
}
.cate-container .cate-container-box .box-left view ._li {
  display: inline-block;
  vertical-align: top;
  width: calc(100% - 3px);
  text-align: center;
  list-style: none;
}
.cate-container .cate-container-box .box-left view.cur {
  background-color: white;
}
.cate-container .cate-container-box .box-left view.cur ._span {
  display: inline-block;
  width: 3px;
  height: 50px;
  background-color: red;
}
.cate-container .cate-container-box .box-right {
  display: inline-block;
  vertical-align: top;
  width: 77%;
}

