.content .banner-swiper {
  width: 100%;
  height: 240px;
  margin-top: 10px;
}
.content .banner-swiper uni-swiper {
  height: 100%;
}
.content .banner-swiper image {
  width: 100%;
}
.content .notice {
  width: 100%;
}
.content .category {
  width: 100%;
  margin-top: 10px;
}
.content .category .u-grid-item {
  width: 24% !important;
}
.content .category .u-grid-item image {
  width: 30px;
  height: 30px;
}
.content .recommended {
  width: 100%;
  margin-top: 10px;
}
.content .recommended .recommended-title {
  width: 95%;
  height: 40px;
  line-height: 40px;
  margin: 0 auto;
}
.content .recommended .recommended-title ._h4,
.content .recommended .recommended-title .recommended-title-right {
  display: inline-block;
}
.content .recommended .recommended-title .recommended-title-right {
  float: right;
}
.content .recommended .recommended-title .recommended-title-right text,
.content .recommended .recommended-title .recommended-title-right .u-icon {
  display: inline-block;
}
.content .recommended .recommended-image {
  width: 95%;
  margin: 0 auto;
}
.content .recommended .recommended-image .big {
  width: 100%;
  height: 130px;
  border-radius: 10px;
}
.content .recommended .recommended-image .small {
  width: 100%;
}
.content .recommended .recommended-image .small image {
  width: 49%;
  height: 160px;
  border-radius: 10px;
}
.content .pro-list {
  width: 95%;
  margin: 10px auto;
}
.content .pro-list .pro-list-ttile {
  width: 100%;
  text-align: center;
}
.content .pro-list .pro-list-container {
  width: 100%;
  margin: 10px auto;
  background: whitesmoke;
  padding-top: 10px;
}
.content .pro-list .pro-list-container .pro-list-inner {
  width: 98%;
  margin: 0 auto;
}
.content .pro-list .pro-list-container .pro-list-item {
  display: inline-block;
  width: 49%;
  background: white;
  margin-bottom: 15px;
  border-radius: 10px;
}
.content .pro-list .pro-list-container .pro-list-item .img-box,
.content .pro-list .pro-list-container .pro-list-item .img-box image {
  width: 100%;
  height: 150px;
}
.content .pro-list .pro-list-container .pro-list-item .img-box image {
  border-radius: 10px;
}
.content .pro-list .pro-list-container .pro-list-item .detail-title {
  width: 98%;
  font-size: 15px;
  line-height: 16px;
  margin: 8px auto;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.content .pro-list .pro-list-container .pro-list-item .price view {
  display: inline-block;
}
.content .pro-list .pro-list-container .pro-list-item .price .cur-price {
  font-size: 18px;
  color: red;
  font-weight: bolder;
  margin-right: 5px;
}
.content .pro-list .pro-list-container .pro-list-item .price .ori-price {
  font-size: 12px;
  color: gray;
  text-decoration: line-through;
}
.content .pro-list .pro-list-container .pro-list-item:nth-child(2n+1) {
  margin-right: 1.5%;
}

