.details-content ._li {
  list-style-type: none;
  display: inline-block;
}
.details-content .details-tabs {
  width: 100%;
}
.details-content .products-intro {
  margin: 10px 0;
}
.details-content .products-intro .details-swiper {
  height: 240px;
}
.details-content .products-intro .details-swiper uni-swiper {
  height: 100%;
}
.details-content .products-intro .details-swiper image {
  width: 100%;
}
.details-content .products-intro .products-intro-text {
  width: 97%;
  margin: 10px auto;
}
.details-content .products-intro .products-intro-text .intro-text-cprice {
  font-weight: bolder;
  font-size: 18px;
  color: red;
}
.details-content .products-intro .products-intro-text .intro-text-title {
  font-size: 15px;
}
.details-content .products-intro .service-title view {
  display: inline-block;
  font-size: 12px;
  margin-right: 10px;
}
.details-content .products-intro .service-title view svg,
.details-content .products-intro .service-title view ._span {
  display: inline-block;
  vertical-align: top;
}
.details-content .products-intro .service-title view image {
  display: inline-block;
  vertical-align: top;
  width: 20px;
  height: 20px;
}
.details-content .products-desc .desc-title {
  margin: 10px 0;
}
.details-content .products-desc .desc-title ._span {
  display: inline-block;
  vertical-align: top;
}
.details-content .products-desc .desc-title .line {
  width: 4px;
  height: 20px;
  background: red;
  margin-right: 8px;
}
.details-content .products-desc .desc-content ._ul {
  margin: 0;
  padding: 0;
  font-size: 14px;
  text-align: left;
}
.details-content .products-desc .desc-content ._ul ._li {
  width: 48%;
  vertical-align: top;
  margin-bottom: 10px;
  margin-left: 5px;
}
.details-content .products-judge .judge-title {
  margin: 10px 0;
}
.details-content .products-judge .judge-title ._span {
  display: inline-block;
  vertical-align: top;
}
.details-content .products-judge .judge-title .line {
  width: 4px;
  height: 20px;
  background: red;
  margin-right: 8px;
}
.details-content .products-judge .judge-list .judge-item {
  width: 98%;
  margin: 10px auto;
}
.details-content .products-judge .judge-list .judge-item .judge-top-left,
.details-content .products-judge .judge-list .judge-item .judge-top-right {
  display: inline-block;
  vertical-align: top;
}
.details-content .products-judge .judge-list .judge-item .judge-top-right view {
  display: inline-block;
  vertical-align: top;
}
.details-content .products-judge .judge-list .judge-item .judge-top-right .user-info {
  margin: 0 15px;
}
.details-content .products-judge .judge-list .judge-item .judge-top-right .user-info ._span {
  color: gray;
  font-size: 13px;
}
.details-content .products-judge .judge-list .judge-item .judge-content {
  margin-top: 10px;
}
.details-content .bottom-action {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 55px;
  background: white;
}
.details-content .bottom-action .action-icons {
  display: inline-block;
  width: 35%;
}
.details-content .bottom-action .action-icons view {
  display: inline-block;
  width: 33.3%;
  vertical-align: top;
}
.details-content .bottom-action .action-icons view ._span {
  display: block;
  font-size: 13px;
}
.details-content .bottom-action .action-buttons,
.details-content .bottom-action .action-buttons view {
  display: inline-block;
  vertical-align: top;
}
.details-content .bottom-action .action-buttons {
  width: 60%;
  float: right;
  margin-right: 5px;
  margin-top: 5px;
}
.details-content .bottom-action .action-buttons view {
  width: 48%;
}
.details-content .bottom-action .action-buttons view:first-child {
  margin-right: 5px;
}
.details-content .u-icon {
  width: 30px !important;
}

